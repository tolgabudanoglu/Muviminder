<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Muviminder" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2C273C</item>
        <item name="colorPrimaryDark">#1F1C26</item>
        <item name="colorAccent">#CE2A5E</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginPage" parent="Theme.AppCompat.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">#2C273C</item>
    <item name="colorPrimaryDark">#1F1C26</item>
        <item name="colorAccent">#CE2A5E</item></style>

    <style name="Theme.Muviminder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Muviminder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Muviminder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>